{
  // =========================================================================
  // 地面站 Zenoh Bridge 配置 (v1.7.0+)
  // 模式：Router - 地面站作为中心节点，USV 连接到此
  // =========================================================================
  
  "mode": "router",
  
  // 监听配置（USV 连接到此端口）
  "listen": {
    "endpoints": [
      "tcp/0.0.0.0:7447"
    ]
  },
  
  "plugins": {
    "ros2dds": {
      "allow": {
        "subscribers": [
          "usv_.*/usv_state",
          "usv_.*/fmu/out/vehicle_status",
          "usv_.*/fmu/out/vehicle_local_position",
          "usv_.*/fmu/out/battery_status"
        ],
        "publishers": [
          "usv_.*/set_usv_mode",
          "usv_.*/set_usv_arming",
          "usv_.*/set_arm",
          "usv_.*/set_usv_target_position",
          "usv_.*/clear_target",
          "group_arm_command",
          "group_mode_command",
          "all_arm",
          "all_disarm"
        ]
      }
    }
  },
  
  "plugins_loading": {
    "enabled": true
  }
}
