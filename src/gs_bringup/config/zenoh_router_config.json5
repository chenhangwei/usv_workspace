{
  // =========================================================================
  // Zenoh Router 配置
  // 部署在网络中心节点，负责路由所有 USV 和地面站之间的话题
  // =========================================================================
  
  // 模式：路由器模式
  "mode": "router",
  
  // 监听配置
  "listen": {
    "endpoints": [
      // 监听地面站 IP
      "tcp/192.168.68.50:7447"
    ]
  },
  
  // 可选：存储管理器（用于离线重连时恢复状态）
  "plugins": {
    "storage_manager": {
      "volumes": {
        "memory": {}
      },
      "storages": {
        // 缓存最新的 USV 状态
        "usv_status_cache": {
          "key_expr": "usv_*/usv_state",
          "volume": "memory"
        }
      }
    }
  },
  
  // 日志配置
  "plugins_loading": {
    "enabled": true,
    "search_dirs": []
  }
}
